<%= form_for(@minute) do |f| %>
  <% if @minute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@minute.errors.count, "error") %> prohibited this minute from being saved:</h2>

      <ul>
      <% @minute.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :started %><br>
    <%= f.datetime_local_field :dtstart, class: 'form-control'  %>
  </div>
  <div class="field form-group">
    <%= f.label :finished %><br>
    <%= f.datetime_local_field :dtend, class: 'form-control'  %>
  </div>
  <div class="field form-group">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: 'form-control'  %>
  </div>
  <div class="field form-group">
    <%= f.label :author %><br>
    <%= user_avatar_icon_tag(@minute.author) %>
    <%= f.label "#{'@' + @minute.author.screen_name rescue '???'}" %>
    <%= f.hidden_field :author_id, class: 'form-control'  %>
  </div>

  <br>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#write" aria-controls="write" role="tab" data-toggle="tab">Write</a>
    </li>
    <li role="presentation">
      <a href="#preview" aria-controls="preview" role="tab" data-toggle="tab">Preview</a>
    </li>
  </ul>

  <div class="field form-group">
    <!-- Tab panes -->
    <div class="tab-content">

      <!-- Write -->
      <div role="tabpanel" class="tab-pane active" id="write">
        <%= f.text_area :content, :rows => 20, :wrap => :off %>
      </div>

      <!-- Preview -->
      <div role="tabpanel" class="tab-pane markdown-body" id="preview">
      </div>

    </div><!-- /tab-content -->
  </div><!-- /form-group -->

  <div class="actions form-group">
    <%= f.submit class: 'btn btn-large btn-primary' %>
  </div>
<% end %>

%h1 Listing Minutes
%table.table
  %thead
    %tr
      %th Title
      %th Date
      %th Location
      %th Author
      %th{:colspan => "3"}
  %tbody
    - @minutes.each do |minute|
      %tr
        %td= minute.title
        %td= minute.dtstart.strftime("%Y-%m-%d") rescue nil
        %td= minute.location
        %td= minute.author && minute.author.name
        %td= link_to 'Show', minute
        %td= link_to 'Edit', edit_minute_path(minute)
        %td= link_to 'Destroy', minute, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= new_content new_minute_path
